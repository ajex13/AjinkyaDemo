<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

    <hr>
  <%= form_for(post) do |f| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title,placeholder: 'Title', class: 'form-control'  %>
    </div><br>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: 'Write something wonderful...', class: 'form-control',rows: 10%>
    </div><br>

    <div class="form-group">
      <%= f.check_box :is_published %>
      <%= f.label :publish %>
    </div><br>

    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary btn-block btn-lg" %>
    </div>
  <% end %>
  </div>
</div>
